@model IEnumerable<Rathor.Models.Status>
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_Layout";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col p-6">
            <h2 class="text-primary">Status List</h2>
        </div>
        <div class="col 6 text-right">
            <a asp-controller="Status" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;  Create New Status
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Status
                    </th>
                    <th width="20%" style="padding-left:50px;">
                        Operations
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Status" asp-route-Id="@item.StatusId" asp-action="Edit" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Status" asp-route-Id="@item.StatusId" asp-action="Delete" class="btn btn-danger mx-1">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Status Exits.</p>
    }

</div>


