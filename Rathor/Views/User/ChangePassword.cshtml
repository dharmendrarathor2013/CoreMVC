@model Rathor.Models.User
@{ 
    Layout = "_UserLayout";
    ViewData["Title"] = "Change Password";
}
<html>
<body>
   <h1> @ViewBag.mailexist</h1>
    <h1 style="color:green">@TempData["passwordchanged"]</h1>
    <h3 style="color:red">@TempData["samepassword"]</h3>

    <form  method="post" asp-action="ChangePassword" >
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <h2 class="text-info pl-3"> Change Current Password</h2>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <a asp-action="Login" class="btn btn-success w-100">
                         Login
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Email">Enter your Mail Id</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div>
                        <p style="color:red">
                            @TempData["shortMessage"]
                        </p>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="OldPassword"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <p style="color:red">
                            @TempData["oldpassword"]
                        </p>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Password"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label>Confirm Password</label>
                        </div>
                        <div class="col-8">
                            <input asp-for="ConfirmPassword" class="form-control" id="myInput" />

                            <input type="checkbox" onclick="showPassword()">Show Password

                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Submit" />
                            </div>
                            <div class="col">
                                <a asp-action="Login" class="btn btn-success w-100">
                                    <i class="fas fa-sign-out-alt"></i>  Back
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @*keep this empty*@
                </div>
            </div>
        </div>
    </form>
</body>
</html>
<script>
    function showPassword() {
  var x = document.getElementById("myInput");
  if (x.type === "password") {
            x.type = "text";
  } else {
            x.type = "password";
  }
    }
</script>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}

