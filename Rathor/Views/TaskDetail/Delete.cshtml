@model Rathor.Models.TaskUserViewModel
@{
    ViewData["Title"] = "Delete";
}
@{
    Layout = "_Layout";
}
<form method="post" asp-action="Delete">
    <input asp-for="TaskDetail.TaskID" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3"> Delete Task</h2>

        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.Title" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.Discription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.Discription" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.Sprint.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.Sprint.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.TypeID"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.TaskType.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.Status"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.Status.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.AssignyId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.User.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.Hours"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.Hours" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.StartDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.StartDate" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TaskDetail.EndDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TaskDetail.EndDate" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <i class="fas fa-sign-out-alt"></i>  Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*keep this empty*@
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
}
}
